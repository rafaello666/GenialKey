{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "esnext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve"
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
